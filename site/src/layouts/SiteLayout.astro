---
import "../styles/global.css";
import { getTaxonomy } from "../lib/taxonomy";

const taxonomy = await getTaxonomy();

const {
  title = taxonomy.brand.name,
  description = taxonomy.brand.tagline,
  canonical, // optional relative or absolute
  ogImage, // optional absolute or relative URL to an image
} = Astro.props;

const canonicalUrl = canonical
  ? new URL(canonical, Astro.site ?? "http://localhost").toString()
  : (Astro.url ? Astro.url.toString() : undefined);

const ogImageUrl =
  typeof ogImage === "string" && ogImage.length > 0
    ? new URL(ogImage, Astro.site ?? "http://localhost").toString()
    : undefined;

const AFFILIATE_DISCLOSURE =
  "As an Amazon Associate I earn from qualifying purchases. When you buy through our links, we may earn a commission.";

// ✅ Brand icon (public asset)
const BRAND_ICON_SRC = "/brand/logo-icon.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    {canonicalUrl ? <link rel="canonical" href={canonicalUrl} /> : null}

    <meta property="og:site_name" content={taxonomy.brand.name} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {canonicalUrl ? <meta property="og:url" content={canonicalUrl} /> : null}
    {ogImageUrl ? <meta property="og:image" content={ogImageUrl} /> : null}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl ? <meta name="twitter:image" content={ogImageUrl} /> : null}

    <slot name="head" />
  </head>

  <body>
    <a class="skip-link" href="#main">Skip to content</a>

    <header class="site-header">
      <div class="site-container header-row">
        <a href="/" class="brand" aria-label={`${taxonomy.brand.name} home`}>
          <span class="brand-mark" aria-hidden="true">
            <img
              src={BRAND_ICON_SRC}
              alt=""
              class="brand-icon-img"
              loading="eager"
              decoding="async"
            />
          </span>

          <span class="brand-text">
            <span class="brand-name">{taxonomy.brand.name}</span>
            <span class="brand-tagline">{taxonomy.brand.tagline}</span>
          </span>
        </a>

        <nav class="site-nav" aria-label="Primary">
          <a href="/posts" class="nav-link">Guides</a>
        </nav>
      </div>

      <div class="site-disclosure" role="note" aria-label="Affiliate disclosure">
        <div class="site-container disclosure-row">
          <span class="disclosure-text">{AFFILIATE_DISCLOSURE}</span>
        </div>
      </div>
    </header>

    <main id="main" class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="site-container footer-row">
        <div class="footer-left">
          © {new Date().getFullYear()} {taxonomy.brand.name}
        </div>
        <div class="footer-right">
          Independent product recommendations
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 20;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(17, 24, 39, 0.08);
  }

  .site-container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ✅ Slightly taller so brand stack breathes */
  .header-row {
    height: 78px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 18px;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 16px;
    text-decoration: none;
    color: inherit;
    min-width: 0;
  }

  /* ✅ Bigger mark + less “padded button” look */
  .brand-mark {
    height: 44px;
    width: 44px;
    border-radius: 14px;
    border: 1px solid rgba(17, 24, 39, 0.08);
    background: rgba(255, 255, 255, 0.6);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;
    overflow: hidden;
  }

  /*
    ✅ This is the key fix for “art looks smaller than container”:
    many PNG logos have transparent padding baked in.
    We scale the image inside the box so the hamster fills the mark.
  */
  .brand-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* ✅ More vertical breathing room between name & tagline */
  .brand-text {
    display: grid;
    gap: 5px;
    line-height: 1.15;
    min-width: 0;
    padding: 2px 0; /* tiny cushion so it doesn’t feel cramped */
  }

  .brand-name {
    font-weight: 950;
    letter-spacing: -0.02em;
    font-size: 21px;
    color: rgba(17, 24, 39, 0.97);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .brand-tagline {
    font-size: 13.5px;
    color: rgba(55, 65, 81, 0.80);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .site-nav {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-link {
    font-size: 13px;
    font-weight: 850;
    color: rgba(17, 24, 39, 0.92);
    text-decoration: none;
    padding: 10px 14px;
    border-radius: 14px;
    border: 1px solid rgba(17, 24, 39, 0.10);
    background: rgba(255, 255, 255, 0.75);
  }

  .nav-link:hover {
    background: rgba(17, 24, 39, 0.04);
    border-color: rgba(17, 24, 39, 0.14);
  }

  .site-disclosure {
    border-top: 1px solid rgba(17, 24, 39, 0.08);
    border-bottom: 1px solid rgba(17, 24, 39, 0.08);
    background: #f6f1e8;
  }

  .disclosure-row {
    padding: 10px 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .disclosure-text {
    font-size: 12.5px;
    line-height: 1.35;
    color: rgba(17, 24, 39, 0.80);
    text-align: center;
    font-weight: 700;
  }

  .site-main {
    padding: 10px 0 0;
    background:
      radial-gradient(1200px 600px at 20% -10%, rgba(37, 99, 235, 0.08), transparent 60%),
      radial-gradient(900px 500px at 90% 0%, rgba(17, 24, 39, 0.05), transparent 55%),
      #f7f7f8;
    min-height: 70vh;
  }

  .site-footer {
    margin-top: 56px;
    border-top: 1px solid rgba(17, 24, 39, 0.08);
    background: rgba(255, 255, 255, 0.92);
  }

  .footer-row {
    padding: 22px 24px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px 18px;
    justify-content: space-between;
    color: rgba(55, 65, 81, 0.75);
    font-size: 13px;
  }

  .skip-link {
    position: absolute;
    left: -999px;
    top: 10px;
    padding: 10px 12px;
    border-radius: 12px;
    background: #111827;
    color: white;
    text-decoration: none;
    z-index: 999;
  }

  .skip-link:focus {
    left: 10px;
  }

  @media (max-width: 520px) {
    .header-row {
      height: 70px;
    }

    .brand-mark {
      height: 50px;
      width: 50px;
      border-radius: 16px;
    }

    .brand-name {
      font-size: 18px;
    }

    .brand-tagline {
      font-size: 12px;
    }

    .brand-icon-img {
      transform: scale(1.18);
    }
  }
</style>
