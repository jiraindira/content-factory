    color: rgb(37, 99, 235);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .post-cat-sep {
    opacity: 0.55;
    margin-right: 4px;
  }

  .post-title {
    margin-top: 10px;
    font-size: clamp(30px, 3.4vw, 52px);
    line-height: 1.06;
    letter-spacing: -0.02em;
    font-weight: 650;
  }

  .post-desc {
    margin-top: 12px;
    font-size: 17px;
    line-height: 1.55;
    max-width: 70ch;
  }

  .post-chips {
    margin-top: 14px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .chip {
    display: inline-flex;
    align-items: center;
    font-size: 13px;
    font-weight: 650;
    padding: 7px 12px;
    border-radius: 999px;
    border: 1px solid rgba(17, 24, 39, 0.12);
    background: rgba(17, 24, 39, 0.03);
    color: rgba(17, 24, 39, 0.82);
    max-width: 100%;
    text-decoration: none;
  }

  .chip:hover {
    border-color: rgba(37, 99, 235, 0.28);
  }

  .chip-audience {
    border-color: rgba(37, 99, 235, 0.22);
    background: rgba(37, 99, 235, 0.06);
    color: rgba(17, 24, 39, 0.88);
  }

  .chip-cat {
    border-color: rgba(17, 24, 39, 0.12);
    background: rgba(17, 24, 39, 0.02);
  }

  .post-grid {
    margin-top: 18px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 18px;
  }

  @media (min-width: 1024px) {
    .post-grid {
      grid-template-columns: minmax(0, 1fr) 340px;
    }
  }

  .post-article {
    background: #fff;
    border: 1px solid rgba(17, 24, 39, 0.08);
    border-radius: 18px;
    padding: 26px;
  }

  .prose-premium {
    max-width: 72ch;
    font-size: 16.5px;
    line-height: 1.72;
  }

  .hero {
    margin-top: 0;
  }

  .hero-frame {
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid rgba(17, 24, 39, 0.10);
    background: rgba(17, 24, 39, 0.02);

    width: 100%;
    height: 360px;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .hero-frame {
      height: 280px;
    }
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 35%;
    display: block;
  }

  .hero-credit {
    margin-top: 8px;
    font-size: 12px;
    color: rgba(55, 65, 81, 0.75);
  }

  .hero-credit-link {
    text-decoration: underline;
    text-underline-offset: 3px;
    color: inherit;
  }

  .hero-credit-link:hover {
    color: rgba(17, 24, 39, 0.9);
  }

  .post-disclosure {
    margin-top: 18px;
    border: 1px solid rgba(17, 24, 39, 0.10);
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.85);
    padding: 16px 18px;
  }

  .disc-title {
    font-size: 12px;
    font-weight: 800;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: rgba(17, 24, 39, 0.75);
    margin: 0 0 6px;
  }

  .disc-body {
    margin: 0;
    font-size: 13px;
    line-height: 1.45;
